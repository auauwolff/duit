---
import ContactModal from "../components/ContactModal.astro";
import FeatureProjects from "../components/sections/FeatureProjects.astro";
import Footer from "../components/sections/Footer.astro";
import Hero from "../components/sections/Hero.astro";
import LetsWorkTogether from "../components/sections/LetsWorkTogether.astro";
import OurTechStack from "../components/sections/OurTechStack.astro";
import OurUniqueApproach from "../components/sections/OurUniqueApproach.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="duI.T.">
  <form name="contact" netlify>
    <p>
      <label>Name <input type="text" name="name" /></label>
    </p>
    <p>
      <label>Email <input type="email" name="email" /></label>
    </p>
    <p>
      <button type="submit">Send</button>
    </p>
  </form>

  <style>
    .feedback-form {
      margin: 40px 40px;
      min-width: 250px;
      width: 45%;
    }
    input,
    textarea,
    button {
      font-size: inherit;
      margin: 15px 0;
      padding: 12px 20px;
      width: 100%;
    }
    button {
      background-color: teal;
      border: 1px solid black;
      color: white;
      width: 50%;
    }
    .hidden {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
    }
  </style>
  <Hero />
  <ContactModal />
  <OurTechStack />
  <OurUniqueApproach />
  <FeatureProjects />
  <LetsWorkTogether />
  <Footer />
</MainLayout>
