<form
  class="contact-form"
  name="contact-f"
  autocomplete="off"
  method="POST"
  data-netlify="true"
>
  <div class="input-container">
    <input type="text" class="input-field input" id="fname" name="name" />
    <label for="fname">Name</label>
    <span>Name</span>
  </div>
  <div class="input-container">
    <input
      type="tel"
      class="input-field mobile input"
      id="mobile"
      name="mobile"
    />
    <label for="mmobile">Mobile</label>
    <span>Mobile</span>
  </div>
  <div class="input-container">
    <input type="email" class="input-field input" id="email" name="email" />
    <label for="email">Email</label>
    <span>Email</span>
  </div>
  <div class="input-container">
    <textarea name="message" class="text-field input" id="text"></textarea>
    <label for="message">Message</label>
    <span>Message</span>
  </div>
  <input type="submit" value="Send" class="btn" />
</form>
